{
  "mcpServers": {
    "context7": {
      "command": "bunx",
      "args": ["@upstash/context7-mcp"]
    },
    "brave-search": {
      "command": "bunx",
      "args": ["-y", "@brave/brave-search-mcp-server", "--transport", "stdio"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}",
        "BRAVE_MCP_TRANSPORT": "stdio"
      }
    },
    "motherduck": {
      "command": "uvx",
      "args": ["mcp-server-motherduck", "--db-path", ":memory:"]
    },
    "playwright": {
      "command": "bunx",
      "args": ["@playwright/mcp@latest"]
    },
    "serena": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "${SERENA_PATH}",
        "serena",
        "start-mcp-server"
      ],
      "env": {
        "SERENA_PATH": "${SERENA_PATH}"
      }
    }
}
